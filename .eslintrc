{
  "root": true,
  "env": {
    "es2021": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "ava"],
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended", "prettier", "plugin:ava/recommended"],
  "rules": {
    "no-empty-function": "error",
    "no-implicit-coercion": "error",
    "no-var": "error",
    "template-curly-spacing": ["error", "never"],
    "prefer-spread": "warn",
    "prefer-const": "error",
    // Idk why, but this is broken
    "ava/no-ignored-test-files": "off"
  }
}
